{
	"parserOptions": {
		"sourceType": "script",
		"impliedStrict": false
	},
	"env": {
		"amd": true,
		"browser": true,
		"es6": false,
		"node": false
	},
	"extends": [
		"standard"
	],
	"root": true,
	"rules": {
		"comma-dangle": [
			"error",
			"never"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": [
			"off"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always",
			{
				"omitLastInOneLineBlock": false
			}
		],
		"strict": [
			"error",
			"safe"
		],
		"one-var": [
			"off"
		]
	},
	"overrides": [
		{
			"files": [
				"**/*.mjs",
				"**/*.jsx"
			],
			"parserOptions": {
				"sourceType": "module"
			}
		},
		{
			"files": [
				"**/test/**/*"
			],
			"env": {
				"mocha": true
			},
			"rules": {
				"no-unused-expressions": "off",
				"no-template-curly-in-string": "off"
			}
		}
	]
}
